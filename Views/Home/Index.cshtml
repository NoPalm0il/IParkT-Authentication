@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Home Page";
}

@if (SignInManager.IsSignedIn(User)) { 
<div class="text-center">
    <h1 class="display-6">Welcome to the IPT's Parking Management Website, we hope you enjoy your stay <span style="color: green">@User.Identity.Name</span>.</h1>
    <br />
    <br />
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4"><img src="\assets\mapa_estancionamento.png" alt="Mapa do estancionamento do IPT" /></div>
        <div class="col-4"></div>
    </div>
    <br />
    <h3><a class="nav-link text" asp-controller="Reservation" asp-action="Create">Click here to make your reservation!</a></h3>
</div>
}
else
{
<div class="text-center">
    <h1 class="display-6">Welcome to the IPT's Parking Management Website</h1>
    <h4 style="color: brown">Please register or sign in to gain full access to the website content!</h4>
    <br />
    <br />
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4"><img src="\assets\mapa_estancionamento.png" alt="Mapa do estancionamento do IPT" /></div>
        <div class="col-4"></div>
        </div>
    </div>
    }
