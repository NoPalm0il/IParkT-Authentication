@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

@{bool yearIsLetters = false;}

<h1>@ViewData["Title"]</h1>

@if (yearIsLetters == true)
{
    <!-- <p style="color: darkred">Your car year must be a valid year</p>-->
}

<div class="row">
    <div class="col-6">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Name"></label>
                <input asp-for="Input.Name" class="form-control" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.LicensePlate"></label>
                <input asp-for="Input.LicensePlate" class="form-control" />
                <span asp-validation-for="Input.LicensePlate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Color"></label>
                <input asp-for="Input.Color" class="form-control" />
                <span asp-validation-for="Input.Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Manufacturer"></label>
                <input asp-for="Input.Manufacturer" class="form-control" />
                <span asp-validation-for="Input.Manufacturer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Model"></label>
                <input asp-for="Input.Model" class="form-control" />
                <span asp-validation-for="Input.Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Year"></label>
                <input asp-for="Input.Year" class="form-control" />
                <span asp-validation-for="Input.Year" class="text-danger"></span>

            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
    <div class="col-6">
        <h4>Unsure on how to correctly register? Follow the guide below.</h4>
        <ul class="list-group">
            <li class="list-group-item list-group-item-success">Passwords can be up to 100 characters, use a password manager to generate a secure password.</li>
            <li class="list-group-item list-group-item-success">Make sure to enter your valid email, account confirmations and password recovery will be sent there.</li>
            <li class="list-group-item list-group-item-success">Please enter the correct color, manufacturer and model of your car, as this will help in future endeavours such as crash reports.</li>
            <li class="list-group-item list-group-item-success">Make sure you enter a 4 digit year. Example: 1999.</li>
            <li class="list-group-item list-group-item-danger">Do not enter unregistered or foreign licence plates, as they are not valid.</li>
            <li class="list-group-item list-group-item-danger">Do leave empty fields as they are all required.</li>
        </ul>
    </div>
</div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
